@{
  ViewBag.Title = "Add an animal";
  Layout = "_Layout";
}

@using AnimalShelter.Models
@model AnimalShelter.Models.Animal

<h4>Add a new animal</h4>
<div class="form">
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    @Html.LabelFor(model => model.Gender, "Male")
    @Html.RadioButton("Gender","M")
    @Html.LabelFor(model => model.Gender, "Female")  
    @Html.RadioButton("Gender","F")  
    <br>
    @Html.LabelFor(model => model.DateAdmitted, "Date Admitted")
    @Html.TextBoxFor(model => model.DateAdmitted, new { @type="date" })
    <br>
    @Html.LabelFor(model => model.AnimalType, "Type of Animal")
    @Html.DropDownListFor(model => model.AnimalType, new SelectList(Enum.GetValues(typeof(AnimalType))), "Select Type")
    <br>
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)
    <br>
    <input type="submit" value="Add new animal" />
  }
</div>

<p>@Html.ActionLink("Show all animals", "Index")</p>